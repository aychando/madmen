extend layout

block main
  .row
    .col-md-12
      
      pre
        code(style='font-weight: 100; font-size:20px;')= JSON.stringify(stripProperties(model, ["_id", "__v"]), null, 2)
      .row
        form(action='#{fullPath}/#{model._id}/edit', type='submit')
          button.btn.btn-default(type='submit') Edit
      .row
        form(method="post", action=action)
          input(type="hidden", name="_method" value="delete")
          button.btn.btn-default(type="submit") Delete
      .row
        a(href='#{fullPath}') Home 